{
  "name": "Jira difficulty rating aggregator",
  "description": "Плагин Chrome для агрегации оценки сложности на основе чекпоинтов разработки в Jira",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  },
  "background": {
    "service_worker": "dist/service-worker.js"
  },
  "permissions": ["scripting"],
  "host_permissions": ["<all_urls>"]
}
